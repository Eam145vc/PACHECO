{
  "name": "tiktok-word-game",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm install && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "cd server && node index.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run server\"",
    "start": "concurrently --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\" \"npm run dev\" \"npm run server\"",
    "start:prod": "concurrently --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\" \"npm run preview\" \"npm run server\"",
    "build:prod": "NODE_ENV=production npm run build && cd server && npm install --production",
    "deploy": "npm run build:prod && cd server && node index.js",
    "render-build": "npm install && npm run build && cd server && npm install && npx puppeteer browsers install chrome",
    "render-start": "cd server && node index.js"
  },
  "dependencies": {
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.543.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "express": "^5.1.0",
    "puppeteer": "^24.20.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "concurrently": "^9.1.0",
    "@vitejs/plugin-react": "^5.0.0",
    "vite": "^7.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0"
  }
}
